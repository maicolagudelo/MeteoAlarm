<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeteoAlarm2.mapa">
    <ContentPage.Content>
        <StackLayout Padding="0,10,0,10">
            <Frame BackgroundColor="WhiteSmoke" Padding="20" CornerRadius="30">
                <Image Source="logotipo.png" HeightRequest="30"></Image>
            </Frame>

            <Label Text="Mapa" FontSize="Title" HorizontalOptions="CenterAndExpand" Padding="20,10,20,10"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition  Height="500">
                    </RowDefinition>
                </Grid.RowDefinitions>
                <WebView Source="http://www.pronosticosyalertas.gov.co/alertabig-portlet/html/alertabig/view.jsp" Grid.Row="0"></WebView>
            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>