<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeteoAlarm2.desastres"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout 
            Padding="0,10,0,10">

            <Frame 
                BackgroundColor="#033744"
                Padding="40" 
                CornerRadius="40">
                <Image Source="logotipo.png"></Image>
            </Frame>
            
            <Label 
                Text="Desastres" 
                FontSize="Title" 
                Padding="20,10,20,10"/>
            
            <Label 
                Text="Notificaciones de desastres naturales" 
                FontSize="16" 
                Padding="20,0,20,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>