             x:Class="MeteoAlarm2.sismos"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout 
            Padding="0,10,0,10">
            
            <Frame 
                BackgroundColor="#033744" 
                Padding="40" 
                CornerRadius="10">
                <Image Source="logotipo.png"></Image>
            </Frame>
            
            <Label 
                Text="Sismos o terremotos" 
                FontSize="Title" 
                Padding="20,10,20,10"/>
            
            <Label 
                Text="Notificaciones de sismos/terremotos" 
                FontSize="16" 
                Padding="20,0,20,0"/>
        
        </StackLayout>
    </ContentPage.Content>
</ContentPage>